{
  "name": "extention",
  "displayName": "zap",
  "description": "ZAP is a generic templating engine. Examples are provided for how to generate artifacts for the C language environment, but one could easily add new templates for other language environments, such as C++, java, node.js, python or any other.",
  "version": "0.0.1",
  "publisher": "shayankamandi",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extention.zap",
    "onCommand:extention.zapopenPackageJsonFile",
    "workspaceContains:.editorconfig"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extention.zap",
        "title": "Open Zap",
        "icon": "zap.svg"
      },
      {
        "command": "extention.zapopenPackageJsonFile",
        "title": "get config for Zap",
        "icon": "zap.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zapextension",
          "title": "Zap",
          "icon": "zap.svg"
        }
      ]
    },
    "views": {
      "zapextension": [
        {
          "id": "zap-scripts",
          "name": "Scripts"
        },
        {
          "id": "zap-configurations",
          "name": "Configurations"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "zap-scripts",
        "contents": "to run the scripts you need to select the package.json file of zap project\n[Open package.json file](command:workbench.action.files.openLocalFile)\n"
      }
    ],
    "configuration": [
      {
        "title": "zap",
        "properties": {
          "zap.packageJsonFilePath": {
            "type": "string",
            "default": "",
            "description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "`node ./test/runTest.js`"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@vscode/test-electron": "^2.1.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  }
}
